{% extends 'base.html.twig' %}

{% block content %}

    <main id="member">

        <!-- TITLE SECTION -->

        <div class="container-fluid pt-5 title-section py-3 justify-content-center position-relative text-center">
            <h1><span>{% include 'common/_random_adjectives.html.twig' %}</span><br>
                {{ user.firstName }} {{ user.lastName }}</h1>
        </div>
        <div class="wave wave-title"></div>
        <div class="breadcrumb">
            <a class="breadcrumb-link" href="{{ path('index') }}">Accueil</a> > <a class="breadcrumb-link" href="{{ path('members') }}">Les membres</a> > <p class="breadcrumb-link {% if current_menu is defined and current_menu == 'member' %}active{% endif %}">{{ user.firstName }} {{ user.lastName }}</p>
        </div>

        <!-- MEMBER SECTION -->

        <section class="members">
            <article class="container member-card mt-4">
                <div class="row">
                    <aside class="col-3 d-flex justify-content-start align-items-center flex-column">
                        <div class="avatar member-avatar my-3">
                            {% if not user.imageName %}
                                <img src="{{ asset('assets/img/avatar/avatar' ~ variable ~ '.png') }}" alt="Avatar Find My Dev">
                            {% endif %}
                            {% if user.imageName %}
                                <img src="{{ vich_uploader_asset(user, 'imageFile') | imagine_filter('avatar') }}" alt="Photo de profil {{ user.firstName }} {{ user.lastName }}">
                            {% endif %}
                        </div>
                        <p class="member-subtitle">Infos</p>
                        <p>{{ user.experience }} d'expérience</p>
                        <p>{{ user.city }}</p>
                    </aside>
                    <div class="container-fluid col-9">
                        <div class="row py-3 justify-content-center align-items-center flex-column text-center member-title">
                            <p class="member-name">{{ user.firstName }} {{ user.lastName }}</p>
                            <p class="member-job">{{ user.speciality }}</p>
                            {%  if user.lookingForJob == 1 %}
                                <p class="member-search">à la recherche d'opportunités</p>
                            {% endif %}
                        </div>
                        <div class="row py-3 justify-content-center align-items-center flex-column text-center">
                            <p class="member-subtitle">A propos</p>
                            <p class="member-resume">{{ user.resume }}</p>
                        </div>
                    </div>
                </div>
            </article>
            <div class="container">
                <div class="row btn-members">
                    <img src="{{ asset('assets/img/avatar/avatar6.png') }}" alt="Avatar 5">
                    <a href="{{ path('members') }}" class="btn-fiche" role="button">Retour à la liste des membres</a>
                </div>
            </div>
        </section>

    </main>

{% endblock %}
