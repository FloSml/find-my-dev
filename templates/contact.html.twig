{% extends 'base.html.twig' %}

{% block content %}

    <main>

        <!-- TITLE SECTION -->

        <div class="container-fluid pt-5 title-section py-3 justify-content-center position-relative">
            <h1>Contactez-nous</h1>
        </div>
        <div class="wave wave-title"></div>

        <!-- FORM SECTION -->
        <div class="container-fluid" id="registration-form-container">
            <div class="container-fluid py-0 my-0">
                {% for message in app.flashes('contact-success') %}
                    <div class="alert alert-success alert-contact mt-4">
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
            </div>
            <div class="row flex-column text-center align-items-center justify-content-center pt-5">
                <p>Si vous avez des questions, des remarques ou que vous voulez juste nous dire bonjour, envoyez-nous un message !</p>
                {{ form_start(contactFormView, {'attr':
                    {'class': 'p-3'}}) }}

                <div class="form-errors row align-items-center justify-content-center">
                    {{ form_errors(contactFormView) }}
                </div>

                <div class="row align-items-center justify-content-center">
                    <div class="col-12 col-sm-8 col-md-6">
                        {{ form_row(contactFormView.firstName, {'attr':
                            {'placeholder': 'Votre pr√©nom...'}}) }}
                    </div>
                    <div class="col-12 col-sm-8 col-md-6">
                        {{ form_row(contactFormView.lastName, {'attr':
                            {'placeholder': 'Votre nom...'}}) }}
                    </div>
                </div>
                <div class="row align-items-center justify-content-center">
                    <div class="col-12">
                        {{ form_row(contactFormView.email, {'attr':
                            {'placeholder': 'Votre email...'}}) }}
                    </div>
                </div>
                <div class="row align-items-center justify-content-center">
                    <div class="col-12">
                        {{ form_row(contactFormView.message, {'attr':
                            {'placeholder': 'Votre message...'}}) }}
                    </div>
                </div>
                <div class="row align-items-center justify-content-center hidden-row">
                    <div class="col-12">
                        {{ form_row(contactFormView.createdAt) }}
                    </div>
                </div>
                <button class="btn-fiche">Envoyer</button>
                {{ form_end(contactFormView) }}
            </div>
        </div>

    </main>

{% endblock %}